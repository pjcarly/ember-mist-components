{{#if loadSelectOptions.isIdle}}
  {{!-- If selectOptions are available they come from the attribute, and must be used instead --}}
  {{#if (eq this.widgetName 'country-select')}}
    <OutputSelectCountry
      @value={{this.computedValue}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}} />
  {{else}}
    <OutputSelect
      @value={{this.computedValue}}
      @selectOptions={{this.selectOptionsComputed}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}} />
  {{/if}}
{{else}}
  {{mist-spinner size="20px"}}
{{/if}}