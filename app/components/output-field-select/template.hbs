{{#if this.loadSelectOptions.isIdle}}
  {{! If selectOptions are available they come from the attribute, and must be used instead }}
  {{#if (eq this.widgetName "country-select")}}
    <OutputSelectCountry
      @value={{this.value}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @noneLabel={{this.noneLabel}}
      @options={{this.outputOptions}}
    />
  {{else}}
    <OutputSelect
      @value={{this.value}}
      @selectOptions={{this.selectOptions}}
      @noneLabel={{this.noneLabel}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}}
    />
  {{/if}}
{{else}}
  <span class="output loader">
    <Loading />
  </span>
{{/if}}