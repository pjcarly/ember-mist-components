{{#if this.selectOptions}}
  {{#if (eq this.widgetName 'country-select')}}
    <OutputSelectCountry
      @value={{this.value}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}} />
  {{else}}
    <OutputSelect
      @value={{this.value}}
      @selectOptions={{this.selectOptions}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}} />
  {{/if}}
{{else if loadSelectOptions.isIdle}}
  {{#if (eq this.widgetName 'country-select')}}
    <OutputSelectCountry
      @value={{this.value}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}} />
  {{else}}
    <OutputSelect
      @value={{this.value}}
      @selectOptions={{this.cachedSelectOptions}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}} />
  {{/if}}
{{else}}
  {{mist-spinner size="20px"}}
{{/if}}