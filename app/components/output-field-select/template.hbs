{{#if this.loadSelectOptions.isIdle}}
  {{! If selectOptions are available they come from the attribute, and must be used instead }}
  {{#if (eq this.widgetName "country-select")}}
    <OutputSelectCountry
      @value={{this.value}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @noneLabel={{this.noneLabel}}
      @options={{this.outputOptions}}
    />
  {{else}}
    {{on-key "alt+r" this.toggleButton event="keydown"}}
    <OutputSelect
      {{did-insert this.inTable Element}}
      @value={{this.value}}
      @selectOptions={{this.selectOptions}}
      @noneLabel={{this.noneLabel}}
      @prefix={{@prefix}}
      @suffix={{@suffix}}
      @class={{@outputClass}}
      @options={{this.outputOptions}}
    />
    {{#if this.showButton}}
      <button
        class="btn-primary reload-button"
        onclick={{this.reloadSelectOptions}}
      >{{#if this.reloadSelectOptions.isIdle}}<Loading />{{else}}<IconRefresh
          />{{/if}}</button>
    {{/if}}
  {{/if}}
{{else}}
  <span class="output loader">
    <Loading />
  </span>
{{/if}}