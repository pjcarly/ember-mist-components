<div class="col-xs-12 col-sm-6 controls">
  <ul>
    <li class={{if amountSelected 'infos'}}>
      {{#if amountSelected}}
        <a {{action "toggleDisplaySelected"}}>Selected: {{amountSelected}}</a>
      {{/if}}
    </li>
  </ul>
</div>
<div class="col-xs-12 col-sm-6 text-right controls">
  <ul>
    <li class="infos">
      {{#if isBusy}}
        {{mist-spinner size="10px" tagName="span"}}
      {{else}}
        {{firstRow}} - {{lastRow}} ofÂ {{totalCount}}
      {{/if}}
    </li>
    <li>
      Rows: {{input-select class="plain-select" selectOptions=rowSelectOptions value=rowsValue valueChanged=(action 'rowsSelected') isRequired=true}}
    </li>
    <li>
      <button class="btn btn-link btn-icon waves-effect waves-circle" {{action "prevPage"}}><i class="zmdi zmdi-chevron-left"></i></button>
      {{input-select class="plain-select" selectOptions=pageSelectOptions value=currentPage valueChanged=(action 'pageSelected') isRequired=true}}
      <button class="btn btn-link btn-icon waves-effect waves-circle" {{action "nextPage"}}><i class="zmdi zmdi-chevron-right"></i></button>
    </li>
  </ul>
</div>
