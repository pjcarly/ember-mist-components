{{#if setCountrySelectOptions.isIdle}}
  <InputSelect
    @selectOptions={{this.selectOptions}}
    @value={{@value}}
    @valueChanged={{@valueChanged}}
    @class={{@class}}
    @inputId={{@inputId}}
    @required={{@required}}
    @options={{@options}}
    @noneLabel="-- Country (none) --" />
{{else}}
  {{mist-spinner size="20px"}}
{{/if}}