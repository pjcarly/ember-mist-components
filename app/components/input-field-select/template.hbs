{{#if this.selectOptions}}
  {{!-- If selectOptions are available they come from the attribute, and must be used instead --}}
  {{#if (eq this.widgetName 'button-group')}}
    <InputButtonGroup
      @selectOptions={{this.selectOptions}}
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{else if (eq this.widgetName 'radio-buttons')}}
    <InputRadioButtonList
      @selectOptions={{this.selectOptions}}
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{else if (eq this.widgetName 'country-select')}}
    <InputSelectCountry
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{else}}
    <InputSelect
      @selectOptions={{this.selectOptions}}
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{/if}}
{{else if loadSelectOptions.isIdle}}
  {{#if (eq this.widgetName 'button-group')}}
    <InputButtonGroup
      @selectOptions={{this.cachedSelectOptions}}
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{else if (eq this.widgetName 'radio-buttons')}}
    <InputRadioButtonList
      @selectOptions={{this.cachedSelectOptions}}
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{else if (eq this.widgetName 'country-select')}}
    <InputSelectCountry
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{else}}
    <InputSelect
      @selectOptions={{this.cachedSelectOptions}}
      @value={{this.value}}
      @valueChanged={{action (mut this.value)}}
      @class={{@inputClass}}
      @inputId={{this.inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}} />
  {{/if}}
{{else}}
  {{mist-spinner size="20px"}}
{{/if}}