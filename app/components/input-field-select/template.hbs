{{#if this.loadSelectOptions.isIdle}}
  {{#if (eq this.widgetName "button-group")}}
    <InputButtonGroup
      @selectOptions={{this.selectOptionsComputed}}
      @value={{this.value}}
      @valueChanged={{this.setSelectValue}}
      @class={{@inputClass}}
      @inputId={{@inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}}
    />
  {{else if (eq this.widgetName "radio-buttons")}}
    <InputRadioButtonList
      @selectOptions={{this.selectOptionsComputed}}
      @value={{this.value}}
      @valueChanged={{this.setSelectValue}}
      @class={{@inputClass}}
      @inputId={{@inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}}
    />
  {{else if (eq this.widgetName "country-select")}}
    <InputSelectCountry
      @value={{this.value}}
      @valueChanged={{this.setSelectValue}}
      @class={{@inputClass}}
      @inputId={{@inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}}
    />
  {{else}}
    <InputSelect
      @selectOptions={{this.selectOptionsComputed}}
      @value={{this.value}}
      @valueChanged={{this.setSelectValue}}
      @class={{@inputClass}}
      @inputId={{@inputId}}
      @noneLabel={{this.noneLabel}}
      @required={{this.isRequired}}
      @options={{this.inputOptions}}
    />
  {{/if}}
{{else}}
  <span class="input loader">
    <Loading />
  </span>
{{/if}}