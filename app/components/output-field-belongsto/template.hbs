{{#if this.value}}
  {{#let
    (concat
      "output-model-" (model-class-name this.value)
    ) as |dynamicComponentName|
  }}
    {{#if (component-exists dynamicComponentName)}}
      {{component
        dynamicComponentName
        value=this.value
        prefix=@prefix
        suffix=@suffix
        class=@outputClass
        inline=@inline
        options=this.outputOptions
      }}
    {{else}}
      <OutputModel
        @value={{this.value}}
        @prefix={{@prefix}}
        @suffix={{@suffix}}
        @class={{@outputClass}}
        @inline={{@inline}}
        @options={{this.outputOptions}}
      />
    {{/if}}
  {{/let}}
{{else}}
  <OutputModel
    @value={{null}}
    @prefix={{@prefix}}
    @suffix={{@suffix}}
    @class={{@outputClass}}
    @inline={{@inline}}
    @options={{this.outputOptions}}
  />
{{/if}}