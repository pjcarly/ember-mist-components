{{#if (component-exists this.dynamicComponentName)}}
  {{component dynamicComponentName
      value=this.value
      prefix=@prefix
      suffix=@suffix
      class=@outputClass
      options=this.outputOptions }}
{{else}}
  <span class="output belongsto">
    {{#if value}}
      <span class="value">
        {{#if (or inline (not value.hasViewRoute))}}
          {{value.name}}
        {{else}}
          <a href={{href-to route value}}>
            {{value.name}}
          </a>
        {{/if}}
      </span>
    {{else}}
      <span class="value empty"></span>
    {{/if}}
  </span>
{{/if}}