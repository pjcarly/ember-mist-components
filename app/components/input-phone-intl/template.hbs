<span class={{this.computedClass}}>
  {{#if @prefix}}
    <div class="input-group-prepend">
      <span class="input-group-text prefix">{{@prefix}}</span>
    </div>
  {{/if}}
  <Input
    @id={{@inputId}}
    @type="tel"
    @value={{@value}}
    class="form-control"
    disabled={{@disabled}}
    placeholder={{@placeholder}} 
    {{on "input" this.valueChanged}}
    ...attributes {{did-insert this.elementInsertedInDOM}} {{will-destroy this.elementWillBeRemovedFromDOM}}/>
  {{#if @suffix}}
    <div class="input-group-append">
      <span class="input-group-text suffix">{{@suffix}}</span>
    </div>
  {{/if}}
</span>