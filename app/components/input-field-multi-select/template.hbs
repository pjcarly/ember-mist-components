{{#if this.selectOptions}}
  <InputMultiSelect
    @selectOptions={{this.selectOptions}}
    @value={{this.value}}
    @valueChanged={{action (mut this.value)}}
    @class={{@inputClass}}
    @inputId={{this.inputId}}
    @noneLabel={{this.noneLabel}}
    @required={{this.isRequired}}
    @options={{this.inputOptions}} />
{{else if loadSelectOptions.isIdle}}
  <InputMultiSelect
    @selectOptions={{this.cachedSelectOptions}}
    @value={{this.value}}
    @valueChanged={{action (mut this.value)}}
    @class={{@inputClass}}
    @inputId={{this.inputId}}
    @noneLabel={{this.noneLabel}}
    @required={{this.isRequired}}
    @options={{this.inputOptions}} />
{{else}}
  {{mist-spinner size="20px"}}
{{/if}}