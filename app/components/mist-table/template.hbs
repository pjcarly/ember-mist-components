{{#light-table table class="table table-hover" scrollContainer='.table-container' onScrolledToBottom=(action 'onScrolledToBottom') as |t|}}
  {{t.head onColumnClick=(action 'onColumnClick') iconAscending='zmdi zmdi-chevron-down' iconDescending='zmdi zmdi-chevron-up'}}

  {{#t.body canSelect=false as |body|}}
    {{#if isLoading}}
      {{#body.loader}}
        {{mist-spinner size="30px"}}
      {{/body.loader}}
    {{/if}}
  {{/t.body}}
{{/light-table}}
