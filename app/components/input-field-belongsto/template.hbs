{{#if (component-exists dynamicComponentName)}}
  {{component dynamicComponentName filters=filters value=(get model field) modelType=relationshipModelType valueChanged=(action 'valueChanged') placeholder=placeholder styleClass=styleClass inputId=inputId options=options}}
{{else if isSelect}}
  {{#if (not selectOptionsNotLoaded)}}
    {{#if noChoiceAvailable}}
      {{output-text value=selectOptions.firstObject.label class="read-only-output-text"}}
    {{else}}
      {{input-select selectOptions=selectOptions value=fieldId isRequired=isRequired valueChanged=(action 'valueChanged') styleClass=styleClass inputId=inputId}}
    {{/if}}
  {{else}}
    {{mist-spinner size="20px"}}
  {{/if}}
{{else}}
  {{input-lookup filters=filters value=(get model field) title="Models" modelType=relationshipModelType valueChanged=(action 'valueChanged') placeholder=placeholder styleClass=styleClass inputId=inputId}}
{{/if}}