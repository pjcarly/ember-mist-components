{{#if (component-exists this.dynamicComponentName)}}
  {{component this.dynamicComponentName
      baseQuery=this.baseQuery
      value=this.value
      modelName=this.relationshipModelName
      valueChanged=(action 'doChangeValue')
      placeholder=@placeholder
      class=this.inputClass
      inputId=this.caluclatedInputId
      required=this.isRequired
      options=this.inputOptions}}
{{else if this.isSelect}}
  {{#if setSelectOptions.isRunning}}
    <Loading />
  {{else if this.noChoiceAvailable}}
    <OutputText
      @value={{this.selectOptions.firstObject.label}}
      @class="read-only-output-text" />
  {{else}}
    <InputSelect
      @selectOptions={{this.selectOptions}}
      @value={{this.relationshipId}}
      @required={{this.isRequired}}
      @valueChanged={{action 'doChangeValue'}}
      @class={{this.inputClass}}
      @inputId={{this.caluclatedInputId}} />
  {{/if}}
{{else}}
  <InputLookup
    @baseQuery={{this.baseQuery}}
    @value={{this.value}}
    @modelName={{this.relationshipModelName}}
    @valueChanged={{action 'doChangeValue'}}
    @placeholder={{@placeholder}}
    @class={{this.inputClass}}
    @inputId={{this.caluclatedInputId}} />
{{/if}}