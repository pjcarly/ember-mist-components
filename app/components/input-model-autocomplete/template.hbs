<PowerSelect @class="form-control"
  @triggerId={{@inputId}}
  @placeholder={{@placeholder}}
  @search={{perform searchTask}}
  @selected={{@value}}
  @onChange={{action 'formValueChanged'}}
  @onFocus={{action 'handleFocus'}}
  @searchEnabled={{true}}
  @allowClear={{not this.shouldHideClear}}
  @renderInPlace={{this.shouldRenderInPlace}} as |model|>
  <span class="name">
    {{model.name}}
  </span>
  <span class="id">
    ({{model.id}})
  </span>
</PowerSelect>