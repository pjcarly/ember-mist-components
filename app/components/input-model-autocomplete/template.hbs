<PowerSelect
  class="form-control"
  @triggerId={{@inputId}}
  @placeholder={{@placeholder}}
  @search={{perform searchTask}}
  @selected={{@value}}
  @onChange={{action this.formValueChanged}}
  @onFocus={{action this.handleFocus}}
  @searchEnabled={{true}}
  @disabled={{@disabled}}
  @allowClear={{not this.shouldHideClear}} as |model|>
  <span class="name">
    {{model.name}}
  </span>
  <span class="id">
    ({{model.id}})
  </span>
</PowerSelect>