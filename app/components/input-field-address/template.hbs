<div class="input-address">
  <div class="row">
    <div class="col-12 country-select">
      <InputSelectCountry
        @value={{this.address.countryCode}}
        @valueChanged={{action this.countryCodeChanged}}
        @inputId={{this.inputId}}
        @required={{this.isRequired}} />
    </div>
  </div>

  {{#if this.address.format}}
    {{#each this.displayRows as |row|}}
      <div class="row">
        {{#each row.columns as |column|}}
          <div class={{row.columnClassName}}>
            {{component column.component
              value=(get address column.field)
              valueChanged=(action (fn this.addressFieldChanged column.field))
              placeholder=column.label
              none=column.none
              selectOptions=column.selectOptions
              disabled=column.disabled }}
          </div>
        {{/each}}
      </div>
    {{/each}}
  {{/if}}

  {{#if this.addressLoading.isRunning}}
    <div class="address-spinner">
      <Loading />
    </div>
  {{/if}}
</div>