<div class="row">
  <div class="{{if applyXS 'col-xs-12' 'col-12'}} country-select">
    <InputSelectCountry
      @value={{this.address.countryCode}}
      @valueChanged={{action 'countryCodeChanged'}}
      @inputId={{this.inputId}}
      @required={{this.isRequired}} />
  </div>
</div>

{{#if address.format}}
  {{#each displayRows as |row|}}
    <div class="row">
      {{#each row.columns as |column|}}
        <div class={{row.columnClassName}}>
          {{component column.component
            value=(get address column.field)
            valueChanged=(action 'addressFieldChanged' column.field)
            placeholder=column.label
            none=column.none
            selectOptions=column.selectOptions
            disabled=column.disabled }}
        </div>
      {{/each}}
    </div>
  {{/each}}
{{/if}}

{{#if addressLoading.isRunning}}
  <div class="address-spinner">
    {{mist-spinner size="20px" class="text-center"}}
  </div>
{{/if}}