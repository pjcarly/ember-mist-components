<span class={{this.computedClass}}>
  {{#if @prefix}}
    <span class="input-group-text prefix">
      {{@prefix}}
    </span>
  {{/if}}

  <FileUpload
    @name={{this.inputIdComputed}}
    @class="form-control browse"
    @multiple={{@multiple}}
    @disabled={{@disabled}}
    @accept={{@accept}}
    @onfileadd={{this.filesSelected}}
    ...attributes
    as |queue|
  >
    {{#if queue.files.firstObject}}
      {{queue.files.firstObject.name}}
    {{else}}
      {{t "ember-mist-components.labels.browse"}}
      <IconPaperclip />
    {{/if}}
  </FileUpload>

  {{#if @suffix}}
    <span class="input-group-text suffix">
      {{@suffix}}
    </span>
  {{/if}}
</span>