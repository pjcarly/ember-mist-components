{{yield (
  hash
    header=(component 'ember-wormhole' to=this.modalHeaderId)
    body=(component 'ember-wormhole' to=this.modalBodyId)
    footer=(component 'ember-wormhole' to=this.modalFooterId)
    trigger=(component 'ember-wormhole' to=this.modalTriggerId)
    close=this.closeModal
    show=this.showModal
    status=this.status
  )
}}

<div id={{this.modalTriggerId}} class="modal-trigger"></div>

<EmberWormhole @to="ember-mist-modal-wormhole">
  <div id={{this.modalId}} class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog{{if this.modalClass (concat ' ' this.modalClass)}}">
      <div class="modal-content">
        <div id={{this.modalHeaderId}} class="modal-header">
          <button {{on "click" this.closeModal}}>
            <i class="icon-cancel"></i>
          </button>
        </div>
        <div id={{this.modalBodyId}} class="modal-body"></div>
        <div id={{this.modalTriggerId}} class="modal-footer"></div>
      </div>
    </div>
  </div>
</EmberWormhole>