<div class="card-header ch-alt">
  <div class="fx-container">
    <h2 class="fx-grow">Recently viewed records <small>Here you can find the last 10 records you viewed</small></h2>
    {{#if navigateTo.isRunning}}
      {{mist-spinner size="20px"}}
    {{/if}}
  </div>
</div>
<div class="card-body">
  <table class="table table-hover">
    <tbody>
      {{#each recentlyViewedRecords as |recentlyViewedRecord|}}
        <tr {{action 'recordSelected' recentlyViewedRecord}}>
          <td>{{recentlyViewedRecord.name}}</td>
        </tr>
      {{else}}
        <tr>
          <td>No recently viewed records</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>