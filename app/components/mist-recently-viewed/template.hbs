<div class="card-header ch-alt">
  <div class="fx-container">
    <h2 class="fx-grow">Recently viewed records</h2>
  </div>
</div>
<div class="card-body">
  <table class="table table-hover">
    <tbody>
      {{#each recentlyViewedRecords as |recentlyViewedRecord|}}
        <tr>
          <td>
            {{#if recordSelected}}
              <div class="recently-viewed-record" {{action recordSelected recentlyViewedRecord select}}>
                <span class="name">{{recentlyViewedRecord.name}}</span>
                <span class="type">{{recentlyViewedRecord.type}}</span>
              </div>
            {{else}}
              <a class="recently-viewed-record" href={{href-to (concat recentlyViewedRecord.type '.view') recentlyViewedRecord.id}}>
                <span class="name">{{recentlyViewedRecord.name}}</span>
                <span class="type">{{recentlyViewedRecord.type}}</span>
              </a>
            {{/if}}
          </td>
        </tr>
      {{else}}
        <tr>
          <td class="no-results">No recently viewed records</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>