<!-- Modal -->
<div class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        {{#if modalVisible}}
          {{#mist-model-table title=title modelType=modelType tableHeight="65vh" keyboardActivated=true fixedSearch=true onRowSelected=(action 'rowSelected') as |table|}}
            {{#table.actions}}
              {{#mist-menu-item action=(action "closeModal") className="waves-circle"}}<i class="zmdi zmdi-close"></i>{{/mist-menu-item}}
            {{/table.actions}}
          {{/mist-model-table}}
        {{/if}}
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" {{action 'closeModal'}}>Cancel</button>
      </div>
    </div>
  </div>
</div>

<div class="field-wrapper">
  <button {{action 'showModal'}} class="btn btn-default lookup-toggle" type="button">
    {{#if computedValue}}
      {{computedValue}}
    {{else}}
      <span class="placeholder">
        {{placeholder}}
      </span>
    {{/if}}
  </button>

  {{#if computedValue}}
    <button type="button" class="btn btn-default waves-effect waves-circle" {{action 'clearLookup'}}>
      <span class="glyphicon glyphicon-remove"></span>
    </button>
  {{/if}}

  <button type="button" class="btn btn-default waves-effect waves-circle" {{action 'showModal'}}>
    <span class="glyphicon glyphicon-search"></span>
  </button>
</div>
