{{#mist-model-table title=title modelType=modelType filters=filters onRowSelected=onRowSelected modelListView=modelListView listViewGrouping=listViewGrouping defaultListView=defaultListView as |table|}}
  {{#if hasBlock}}
    {{yield table}}
  {{else}}
    {{#if (not hideNew)}}
      {{#table.new}}
        {{#mist-button class="bgm-pink btn-float" click=(action 'newFromRelated')}}<i class="zmdi zmdi-plus"></i>{{/mist-button}}
      {{/table.new}}
    {{/if}}
  {{/if}}
{{/mist-model-table}}
