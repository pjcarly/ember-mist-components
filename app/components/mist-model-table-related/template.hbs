{{#mist-model-table title=title modelType=modelType filters=filters onRowSelected=onRowSelected as |table|}}
  {{#if hasBlock}}
    {{yield table}}
  {{else}}
    {{#if (not hideNew)}}
      {{#table.new}}
        {{#mist-button class="bgm-pink btn-float" click=(perform newFromRelated)}}<i class="zmdi zmdi-plus"></i>{{/mist-button}}
      {{/table.new}}
    {{/if}}
  {{/if}}
{{/mist-model-table}}
