<div class="row">
  <div class="col-12 col-sm-6 controls left">
    <ul>
      <li class={{if @amountSelected 'infos'}}>
        {{#if @amountSelected}}
          <a {{on "click" this.didToggleDisplaySelected}}>{{t 'ember-mist-components.table.rows'}}: {{@amountSelected}}</a>
        {{/if}}
      </li>
    </ul>
  </div>
  <div class="col-12 col-sm-6 controls right">
    <ul>
      <li class="infos">
        {{#if @isBusy}}
          <Loading />
        {{else}}
          {{@firstRow}} - {{@lastRow}} {{t 'ember-mist-components.labels.of'}}Â {{@totalCount}}
        {{/if}}
      </li>
      <li>
        {{t 'ember-mist-components.table.rows'}}:
        <InputSelect @class="plain-select" 
          @selectOptions={{this.rowSelectOptions}} 
          @value={{this.rowsValue}}
          @valueChanged={{action this.didSelectRows}} 
          @required={{true}} />
      </li>
      <li>
        <button class="btn btn-link btn-icon" {{on "click" this.goToPrevPage}}>
          <IconChevronLeft />
        </button>

        <InputSelect 
          @class="plain-select" 
          @selectOptions={{this.pageSelectOptions}} 
          @value={{@currentPage}}
          @valueChanged={{action this.didSelectPage}} 
          @required={{true}} />

        <button class="btn btn-link btn-icon" {{on "click" this.goToNextPage}}>
          <IconChevronRight />
        </button>
      </li>
    </ul>
  </div>
</div>