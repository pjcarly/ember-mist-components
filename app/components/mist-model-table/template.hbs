{{input-text}}

{{#light-table table class="table table-hover" scrollContainer='.table-container' onScrolledToBottom=(action 'onScrolledToBottom') as |t|}}
  {{#if displayHead}}
    {{t.head onColumnClick=(action 'onColumnClick') iconAscending='zmdi zmdi-chevron-down' iconDescending='zmdi zmdi-chevron-up'}}
  {{/if}}

  {{#t.body onRowClick=(action 'onRowClick') onRowMouseEnter=(action 'onRowMouseEnter') onRowMouseLeave=(action 'onRowMouseLeave') as |body|}}
    {{#if isLoading}}
      {{#body.loader}}
        {{mist-spinner size="30px" class="text-center"}}
      {{/body.loader}}
    {{/if}}

    {{#if table.isEmpty}}
      {{#body.no-data}}
        No data found
      {{/body.no-data}}
    {{/if}}
  {{/t.body}}
{{/light-table}}
