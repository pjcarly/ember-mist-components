<div id={{this.modalId}} class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        {{#if modalVisible}}
          <ModelTable
            @title={{@title}}
            @modelName={{@modelName}}
            @activeModelName={{@activeModelName}}
            @conditions={{@conditions}}
            @class={{@class}}
            @searchFixed=true
            @listViewGrouping={{@listViewGrouping}}
            @onRowSelected={{action 'didSelectRow'}}
            as |table| >

            {{#table.actions}}
              {{#mist-menu-item action=(action "closeModal") className="waves-circle"}}<i class="zmdi zmdi-close"></i>{{/mist-menu-item}}
            {{/table.actions}}
          </ModelTable>
        {{/if}}
      </div>
    </div>
  </div>
</div>


{{#if hasBlock}}
  {{yield (action 'showModal')}}
{{else}}
  <button type="button" class="btn btn-default waves-effect waves-circle" {{action 'showModal'}}>
    <span class="glyphicon glyphicon-search"></span>
  </button>
{{/if}}
